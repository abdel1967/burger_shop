{% extends 'base.html.twig' %}

{% block title %}Nos Produits-BurgerShop{% endblock %}

{% block content %}
    <di class="row">
        <div class="col-md-3">
            <h1>Filtrer</h1>
            {{ form(form) }}
        </div>
        <div class="col-9">
            <h1 class="text-center">Nos Produits</h1>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product', {'slug' : product.slug}) }}"><img src="/uploads/{{ product.illustration}}" alt="{{ product.name }}" class="img-fluid bg-secondary"></a>
                            <h5>{{ product.name }}</h5>
                            <span class="product-subtitle">{{ product.subtitle }}</span>
                            <span class="product-price">{{ (product.price /100)|number_format(2, ',', '.') }} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </di>

{% endblock %}
