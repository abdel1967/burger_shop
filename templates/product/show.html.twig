{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}-BurgerShop{% endblock %}

{% block content %}

        <div class="row" id="bip">
            <div class="col-md-5">
                <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid bg-secondary">
            </div>
            <div class="col-md-7 my-auto">
                <h3>{{ product.name }}</h3>
                <p><strong>{{ product.subtitle }}</strong></p>
                <span class="product-page-price">{{ (product.price /100)|number_format(2, ',', '.') }} â‚¬</span>
